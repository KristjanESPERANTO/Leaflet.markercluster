{
  "name": "@kristjan.esperanto/leaflet.markercluster",
  "version": "3.0.0-alpha.1",
  "description": "Provides beautiful animated Marker clustering functionality for Leaflet.",
  "homepage": "https://kristjanesperanto.github.io/Leaflet.markercluster/",
  "repository": {
    "type": "git",
    "url": "https://github.com/KristjanESPERANTO/Leaflet.markercluster"
  },
  "bugs": {
    "url": "https://github.com/KristjanESPERANTO/Leaflet.markercluster/issues"
  },
  "author": "Dave Leaver",
  "license": "MIT",
  "type": "module",
  "main": "dist/leaflet.markercluster.js",
  "module": "dist/leaflet.markercluster.js",
  "types": "types/index.d.ts",
  "style": "dist/MarkerCluster.css",
  "sideEffects": false,
  "publishConfig": {
    "tag": "next",
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/leaflet.markercluster.js",
      "default": "./dist/leaflet.markercluster.js"
    },
    "./dist/MarkerCluster.css": "./dist/MarkerCluster.css",
    "./dist/MarkerCluster.Default.css": "./dist/MarkerCluster.Default.css"
  },
  "files": [
    "dist/**/*",
    "types/**/*",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.md"
  ],
  "keywords": [
    "gis",
    "map",
    "cluster",
    "leaflet",
    "markers"
  ],
  "peerDependencies": {
    "leaflet": ">=2.0.0-alpha.1"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/markdown": "^7.5.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^61.5.0",
    "globals": "^16.5.0",
    "leaflet": "^2.0.0-alpha.1",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "rollup": "4.53.3",
    "simple-git-hooks": "^2.13.1",
    "sinon": "^21.0.0"
  },
  "scripts": {
    "test": "npm run lint && npm run build && node spec/run-tests.js",
    "build": "npm run lint:fix && rollup -c build/rollup-config.js",
    "prepublishOnly": "npm run build",
    "lint": "eslint && prettier --check .",
    "lint:fix": "eslint --fix && prettier --write .",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  }
}
